<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.coachmanager.VerAlumnoActivity"
    android:background="#EEEEEE">

    <ImageView
        android:id="@+id/fotoAlumno"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/boton_redondeado" />

    <TextView
        android:id="@+id/lblNombreGrupo"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="129dp"
        android:text="@string/lblNombreRegistro"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edNombreGrupo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblNombreGrupo"
        android:background="@drawable/editextborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblCategoriaGrupo"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edNombreGrupo"
        android:layout_marginTop="8dp"
        android:text="@string/lblCategoriaGrupo"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblCategoriaGrupoValor"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblCategoriaGrupo"
        android:background="@drawable/editextborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblAlumnosGrupo"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lblCategoriaGrupoValor"
        android:layout_alignParentStart="true"
        android:text="@string/lblAlumnosGrupo"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnVolver"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fotoAlumno"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/flechaatras" />

    <Button
        android:id="@+id/btnEditarGrupo"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_above="@+id/fotoAlumno"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-55dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/boton_redondeado"
        android:padding="4dip"
        android:text="@string/btnEditarrGrupo"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_alumnos_grupo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblAlumnosGrupo"
        android:choiceMode="multipleChoice" />

</RelativeLayout>
