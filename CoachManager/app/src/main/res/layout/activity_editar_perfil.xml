<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.coachmanager.RegistroActivity"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoRegistroModificar"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="73dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/lblSegundoApellidoRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edPrimerApellidoRegistroModificar"
                android:layout_below="@+id/edPrimerApellidoRegistroModificar"
                android:layout_marginTop="12dp"
                android:text="@string/lblSegundoApellidoRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblCorreoRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/logoRegistroModificar"
                android:layout_below="@+id/logoRegistroModificar"
                android:layout_marginStart="17dp"
                android:layout_marginTop="39dp"
                android:text="@string/lblCorreoLogin"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblFechaNacimientoRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edMovilRegistroModificar"
                android:layout_below="@+id/edMovilRegistroModificar"
                android:layout_marginTop="18dp"
                android:text="@string/lblFechaRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblPasswordRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edCorreoRegistroModificar"
                android:layout_below="@+id/edCorreoRegistroModificar"
                android:layout_marginTop="11dp"
                android:text="@string/lblPasswordLogin"
                android:textColor="@android:color/background_dark"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edCorreoRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/lblCorreoRegistroModificar"
                android:layout_below="@+id/lblCorreoRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintCorreo"

                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lblDNIRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edSegundoApellidoRegistroModificar"
                android:layout_below="@+id/edSegundoApellidoRegistroModificar"
                android:layout_marginTop="14dp"
                android:text="@string/lblDNIRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblNombreRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edPasswordRegistroModificar"
                android:layout_below="@+id/edPasswordRegistroModificar"
                android:layout_marginTop="14dp"
                android:text="@string/lblNombreRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edPasswordRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/lblPasswordRegistroModificar"
                android:layout_below="@+id/lblPasswordRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="*********"
                android:inputType="textPassword"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/edNombreRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblNombreRegistroModificar"
                android:layout_below="@+id/lblNombreRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintNombre"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edSegundoApellidoRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblSegundoApellidoRegistroModificar"
                android:layout_below="@+id/lblSegundoApellidoRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintSegundoApellidoRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edPrimerApellidoRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblPrimerApellidoRegistroModificar"
                android:layout_below="@+id/lblPrimerApellidoRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintPrimerApellidoRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edMovilRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblMovilRegistroModificar"
                android:layout_below="@+id/lblMovilRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintMovilRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lblMovilRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edDNIRegistroModificar"
                android:layout_below="@+id/edDNIRegistroModificar"
                android:layout_marginTop="18dp"
                android:text="@string/lblMovilRegisto"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblPrimerApellidoRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edNombreRegistroModificar"
                android:layout_below="@+id/edNombreRegistroModificar"
                android:layout_marginTop="16dp"
                android:text="@string/lblPrimerApellidoRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edDNIRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblDNIRegistroModificar"
                android:layout_below="@+id/lblDNIRegistroModificar"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintDNIRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edFechaRegistroModificar"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/lblFechaNacimientoRegistroModificar"
                android:layout_below="@+id/lblFechaNacimientoRegistroModificar"
                android:background="@drawable/editextborder"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/hintFechaRegistro"
                android:inputType="date"
                android:maxLines="1" />

            <TextView
                android:id="@+id/lblGeneroRegistroModificar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edFechaRegistroModificar"
                android:layout_alignTop="@+id/edFechaRegistroModificar"
                android:layout_marginTop="42dp"
                android:text="@string/lblGenero"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerGeneroRegistroModificar"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/lblGeneroRegistroModificar"
                android:layout_below="@+id/lblGeneroRegistroModificar"
                android:paddingTop="5dp"
                android:paddingStart="0dp"
                android:backgroundTint="#01C321" />

            <Button
                android:id="@+id/btnRegistrarModificar"
                android:layout_width="200dp"
                android:layout_height="50dp"

                android:layout_below="@+id/spinnerGeneroRegistroModificar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginVertical="60dp"
                android:background="@drawable/boton_redondeado"
                android:text="@string/btnGuardarEditAlum"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edCorreoRegistroModificar"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/lblCorreoRegistroModificar"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edPasswordRegistroModificar"
                android:layout_toEndOf="@+id/lblPasswordRegistroModificar"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
            android:id="@+id/lblAsterisco3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_above="@+id/edNombreRegistroModificar"
            android:layout_toEndOf="@+id/lblNombreRegistroModificar"
            android:layout_marginStart="3dp"
            android:text="*"
            android:textAlignment="viewEnd"
            android:textColor="#01C321"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edPrimerApellidoRegistroModificar"
                android:layout_toEndOf="@+id/lblPrimerApellidoRegistroModificar"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edDNIRegistroModificar"
                android:layout_toEndOf="@+id/lblDNIRegistroModificar"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco7"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edMovilRegistroModificar"
                android:layout_toEndOf="@+id/lblMovilRegistroModificar"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco8"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edFechaRegistroModificar"
                android:layout_toEndOf="@+id/lblFechaNacimientoRegistroModificar"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
