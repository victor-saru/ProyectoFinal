<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.coachmanager.VerAlumnoActivity"
    android:background="#EEEEEE">

    <ImageView
        android:id="@+id/btnVolverEditarEntre"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/flechaatras" />

    <Button
        android:id="@+id/btnGuardarEditEntre"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnVolverEditarEntre"
        android:layout_marginEnd="30dp"
        android:background="@drawable/boton_redondeado"
        android:padding="4dip"
        android:text="@string/btnGuardarEditAlum"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblNombreEntreEditar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnVolverEditarEntre"
        android:layout_marginTop="129dp"
        android:text="@string/lblNombreRegistro"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edNombreEntreEditar"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/lblNombreEntreEditar"
        android:layout_below="@+id/lblNombreEntreEditar"
        android:background="@drawable/editextborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblDeporteEntreEditar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/lblNombreEntreEditar"
        android:layout_below="@+id/edNombreEntreEditar"
        android:layout_marginTop="8dp"
        android:text="@string/lblDeporteEntre"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/SpDeporteEntreEditar"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/lblNombreEntreEditar"
        android:layout_below="@+id/lblDeporteEntreEditar"
        android:backgroundTint="#01C321"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="0dp"
        android:paddingTop="5dp"
        android:singleLine="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblEjercicioEntreEditar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/lblNombreEntreEditar"
        android:layout_below="@+id/SpDeporteEntreEditar"
        android:layout_marginTop="1dp"
        android:text="@string/lblEjercicioEntreAÃ±adir"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_ejercicios_deporteEditar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblEjercicioEntreEditar"
        android:layout_marginStart="15dp"
        android:choiceMode="multipleChoice" />

</RelativeLayout>
