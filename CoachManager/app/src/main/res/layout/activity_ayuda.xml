<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.coachmanager.AyudaActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/btnVolverAyuda"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="42dp"
        app:srcCompat="@drawable/flechaatras" />

    <ImageButton
        android:id="@+id/btnGruposAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnEntrenamientoAyuda"
        android:layout_marginTop="162dp"
        android:background="@drawable/ripple_effect"
        android:padding="3dp"
        android:src="@drawable/botongrupos" />

    <ImageButton
        android:id="@+id/btnEjerciciosAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAlumnosAyuda"
        android:layout_marginBottom="250dp"
        android:background="@drawable/ripple_effect"
        android:padding="3dp"
        android:src="@drawable/botonejercicios" />

    <ImageButton
        android:id="@+id/btnEntrenamientoAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnEjerciciosAyuda"
        android:layout_marginEnd="50dp"
        android:background="@drawable/ripple_effect"
        android:padding="3dp"
        android:src="@drawable/botonentrenamientos" />

    <ImageButton
        android:id="@+id/btnAlumnosAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnGruposAyuda"
        android:layout_marginStart="50dp"
        android:background="@drawable/ripple_effect"
        android:padding="3dp"
        android:src="@drawable/botonalumnos" />

    <TextView
        android:id="@+id/lblAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnVolverAyuda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/lblAyuda"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>
