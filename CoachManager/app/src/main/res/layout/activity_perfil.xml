<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.coachmanager.RegistroActivity"
    android:background="#FFFFFF">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPerfil"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoRegistroPerfil"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="73dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/lblSegundoApellidoRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edPrimerApellidoRegistroPerfil"
                android:layout_below="@+id/edPrimerApellidoRegistroPerfil"
                android:layout_marginTop="12dp"
                android:text="@string/lblSegundoApellidoRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblCorreoRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/logoRegistroPerfil"
                android:layout_below="@+id/logoRegistroPerfil"
                android:layout_marginStart="17dp"
                android:layout_marginTop="39dp"
                android:text="@string/lblCorreoLogin"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblFechaNacimientoRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edMovilRegistroPerfil"
                android:layout_below="@+id/edMovilRegistroPerfil"
                android:layout_marginTop="18dp"
                android:text="@string/lblFechaRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblPasswordRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edCorreoRegistroPerfil"
                android:layout_below="@+id/edCorreoRegistroPerfil"
                android:layout_marginTop="11dp"
                android:text="@string/lblPasswordLogin"
                android:textColor="@android:color/background_dark"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edCorreoRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/lblCorreoRegistroPerfil"
                android:layout_below="@+id/lblCorreoRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintCorreo"

                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lblDNIRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edSegundoApellidoRegistroPerfil"
                android:layout_below="@+id/edSegundoApellidoRegistroPerfil"
                android:layout_marginTop="14dp"
                android:text="@string/lblDNIRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblNombreRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edPasswordRegistroPerfil"
                android:layout_below="@+id/edPasswordRegistroPerfil"
                android:layout_marginTop="14dp"
                android:text="@string/lblNombreRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edPasswordRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/lblPasswordRegistroPerfil"
                android:layout_below="@+id/lblPasswordRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="*********"
                android:inputType="textPassword"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/edNombreRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblNombreRegistroPerfil"
                android:layout_below="@+id/lblNombreRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintNombre"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/edSegundoApellidoRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblSegundoApellidoRegistroPerfil"
                android:layout_below="@+id/lblSegundoApellidoRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintSegundoApellidoRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/edPrimerApellidoRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblPrimerApellidoRegistroPerfil"
                android:layout_below="@+id/lblPrimerApellidoRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintPrimerApellidoRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/edMovilRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblMovilRegistroPerfil"
                android:layout_below="@+id/lblMovilRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintMovilRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/lblMovilRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edDNIRegistroPerfil"
                android:layout_below="@+id/edDNIRegistroPerfil"
                android:layout_marginTop="18dp"
                android:text="@string/lblMovilRegisto"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblPrimerApellidoRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edNombreRegistroPerfil"
                android:layout_below="@+id/edNombreRegistroPerfil"
                android:layout_marginTop="16dp"
                android:text="@string/lblPrimerApellidoRegistro"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edDNIRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_alignStart="@+id/lblDNIRegistroPerfil"
                android:layout_below="@+id/lblDNIRegistroPerfil"
                android:background="@drawable/editextborder"
                android:ems="10"
                android:hint="@string/hintDNIRegistro"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/edFechaRegistroPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/lblFechaNacimientoRegistroPerfil"
                android:layout_below="@+id/lblFechaNacimientoRegistroPerfil"
                android:background="@drawable/editextborder"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/hintFechaRegistro"
                android:inputType="date"
                android:maxLines="1" />

            <TextView
                android:id="@+id/lblGeneroRegistroPerfil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/edFechaRegistroPerfil"
                android:layout_alignTop="@+id/edFechaRegistroPerfil"
                android:layout_marginTop="42dp"
                android:text="@string/lblGenero"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spinnerGeneroRegistroPerfil"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="200dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/lblGeneroRegistroPerfil"
                android:layout_below="@+id/lblGeneroRegistroPerfil"
                android:paddingTop="5dp"
                android:paddingStart="0dp"
                android:backgroundTint="#01C321" />

            <Button
                android:id="@+id/btnRegistrarPerfil"
                android:layout_width="200dp"
                android:layout_height="50dp"

                android:layout_below="@+id/spinnerGeneroRegistroPerfil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginVertical="60dp"
                android:background="@drawable/boton_redondeado"
                android:text="@string/btnHacerRegistro"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edCorreoRegistroPerfil"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/lblCorreoRegistroPerfil"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edPasswordRegistroPerfil"
                android:layout_toEndOf="@+id/lblPasswordRegistroPerfil"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
            android:id="@+id/lblAsterisco3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_above="@+id/edNombreRegistroPerfil"
            android:layout_toEndOf="@+id/lblNombreRegistroPerfil"
            android:layout_marginStart="3dp"
            android:text="*"
            android:textAlignment="viewEnd"
            android:textColor="#01C321"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edPrimerApellidoRegistroPerfil"
                android:layout_toEndOf="@+id/lblPrimerApellidoRegistroPerfil"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edDNIRegistroPerfil"
                android:layout_toEndOf="@+id/lblDNIRegistroPerfil"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco7"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edMovilRegistroPerfil"
                android:layout_toEndOf="@+id/lblMovilRegistroPerfil"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAsterisco8"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_above="@+id/edFechaRegistroPerfil"
                android:layout_toEndOf="@+id/lblFechaNacimientoRegistroPerfil"
                android:layout_marginStart="3dp"
                android:text="*"
                android:textAlignment="viewEnd"
                android:textColor="#01C321"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
