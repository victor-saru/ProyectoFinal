<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.coachmanager.VerAlumnoActivity"
    android:background="#EEEEEE">

    <Button
        android:id="@+id/btnEditarEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_above="@+id/btnVolverVerEjercicio"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/boton_redondeado"
        android:padding="4dip"
        android:text="@string/btnEditarEjercicio"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblNombreEjercicioVer"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:text="@string/lblNombreRegistro"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblNombreEjercicioVerValor"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblNombreEjercicioVer"
        android:background="@drawable/editextborder"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblDescripcionEjercicioVer"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblNombreEjercicioVerValor"
        android:layout_marginTop="8dp"
        android:text="@string/lblDescripcionEjercicio"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblDescripcionEjercicioVerValor"
        android:layout_width="237dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDescripcionEjercicioVer"
        android:background="@drawable/editextborder"
        android:ems="10"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/btnVolverVerEjercicio"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/flechaatras" />

</RelativeLayout>
